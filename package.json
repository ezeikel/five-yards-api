{
  "name": "five-yards-api",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "node ./start.js",
    "start-dev": "nodemon ./start.js",
    "dev": "yarn bake-env && yarn start-dev",
    "bake-env": "node ./scripts/process.env-generator.js",
    "lint": "jest --config test/jest.lint.js",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|css|md|mdx|html)\"",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "validate": "npm-run-all --parallel test:coverage lint"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.gitignore"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|html|md)": [
      "prettier --write",
      "jest --findRelatedTests"
    ]
  },
  "dependencies": {
    "@sentry/node": "5.13.0",
    "apollo-server-express": "^2.9.4",
    "bcryptjs": "^2.4.3",
    "colors": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "crypto": "^1.0.1",
    "dotenv": "^6.0.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "jsonwebtoken": "^8.3.0",
    "md5": "^2.2.1",
    "mongoose": "^5.7.3",
    "mongoose-mongodb-errors": "^0.0.2",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.8",
    "nodemon": "^1.19.3",
    "passport-local-mongoose": "^5.0.1",
    "path": "^0.12.7",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "stripe": "^6.17.0",
    "util": "^0.11.0",
    "validator": "^10.7.1"
  },
  "devDependencies": {
    "@babel/register": "^7.8.6",
    "babel-eslint": "^10.1.0",
    "cross-spawn": "^7.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "inquirer": "^7.0.6",
    "is-ci": "^2.0.0",
    "is-ci-cli": "^2.0.0",
    "jest": "^25.1.0",
    "jest-in-case": "^1.0.2",
    "jest-runner-eslint": "^0.7.6",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "replace-in-file": "^5.0.2"
  }
}
